<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_margin="20dp"
              android:layout_gravity="center_horizontal"
              android:gravity="center_horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:id="@+id/weight_ex1"
            android:text="Пример #1 - равный вес"/>
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:id="@+id/weight_ex2"
            android:text="Пример #2 - вес по нарастающей"/>
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:id="@+id/weight_ex3"
            android:text="Пример #3 - рисуем флаг"/>
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:id="@+id/weight_ex4"
            android:text="Пример #4 - фиксированный header и footer"/>
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:id="@+id/weight_ex5"
            android:text="Пример #5 - weightSum"/>
</LinearLayout>